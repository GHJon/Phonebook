<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="203.0" prefWidth="414.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PhonebookController">
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <Label maxWidth="-Infinity" minWidth="-Infinity" text="Are you sure you want to exit?" textAlignment="CENTER" textOverrun="CLIP">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </Label>
         </center>
         <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <buttons>
                  <Button fx:id="btnOK" mnemonicParsing="false" onMouseClicked="#clickedExitButton" text="OK" />
                <Button fx:id="btnCancel" mnemonicParsing="false" onMouseClicked="#clickedExitButton" text="Cancel" />
              </buttons>
            </ButtonBar>
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
